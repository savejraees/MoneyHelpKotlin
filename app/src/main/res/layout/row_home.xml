<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/black_light">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crude Oil"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="start"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtBUYSEll"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="BuySell"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txtSignal"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textSize="16dp"
                android:gravity="center"
                android:background="@color/green"
                android:textColor="@color/white"
                android:textAllCaps="true"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Cmp"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txtCmp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="190.00"
                android:textSize="16dp"
                android:gravity="center"
                android:background="@color/green"
                android:textColor="@color/white"
                android:textAllCaps="true"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Stop Loss"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txtStopLoss"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="HIT"
                android:textSize="16dp"
                android:gravity="center"
                android:background="@color/green"
                android:textColor="@color/white"
                android:textAllCaps="true"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Inst"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txtInstruct"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textSize="16dp"
                android:gravity="center"
                android:background="@color/purple_700"
                android:textColor="@color/white"
                android:textAllCaps="true"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Target"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txtTarget"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="3600"
                android:textSize="16dp"
                android:gravity="center"
                android:background="@color/red"
                android:textColor="@color/white"
                android:textAllCaps="true"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Result"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txtResult"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textAllCaps="true"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txtNoticed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="safklj asflkj asf sdf sdf sfd fds fds fsd"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/teal_200"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txtDats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="27-Dec-2020 01:10 PM"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="end"
        android:textColor="@color/white"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/green"/>

</LinearLayout>
</androidx.cardview.widget.CardView>